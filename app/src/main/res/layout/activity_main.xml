<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="296dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:fontFamily="monospace"
        android:text="Приложение Квадратное уравнение"
        android:textAlignment="center"
        android:textColor="#236FF3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header2"
        android:layout_width="333dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="Решите данное квадратное уравнение:"
        android:textColor="#794CE3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/equationText"
        android:layout_width="334dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:background="#484077CC"
        android:padding="14dp"
        android:text="Уравнение"
        android:textAlignment="center"
        android:textColor="#0F21C3"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header2" />

    <TextView
        android:id="@+id/header3"
        android:layout_width="338dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:text="Решение:"
        android:textAlignment="textStart"
        android:textColor="#724CDA"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equationText" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="411dp"
        android:layout_height="217dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header3">

        <Button
            android:id="@+id/checkButton"
            android:layout_width="171dp"
            android:layout_height="96dp"
            android:text="Проверить"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/fieldX1"
            android:layout_width="210dp"
            android:layout_height="62dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="X1:"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/fieldX2"
            android:layout_width="209dp"
            android:layout_height="67dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="X2:"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fieldX1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>